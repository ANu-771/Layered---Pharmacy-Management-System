<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1040.0" stylesheets="@../view/table.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.pharmacy.controller.ReportController">

    <center>
        <VBox spacing="20.0" style="-fx-background-color: white;">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>

            <Label text="Report &amp; Analytics" textFill="#1e293b">
                <font>
                    <Font name="System Bold" size="26.0" />
                </font>
            </Label>

            <Separator />

            <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #f8fafc; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 0);">
                <padding>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </padding>
                <children>
                    <VBox spacing="5.0">
                        <children>
                            <Label text="Report Type" textFill="#475569">
                                <font><Font name="System Bold" size="12.0" /></font>
                            </Label>
                            <ComboBox fx:id="cmbReportType" prefWidth="200.0" promptText="Select Report" style="-fx-background-color: white; -fx-border-color: #cbd5e1; -fx-border-radius: 8; -fx-background-radius: 8;" />
                        </children>
                    </VBox>

                    <HBox HBox.hgrow="ALWAYS" />

                    <Button fx:id="btnGenerate" mnemonicParsing="false" onAction="#btnGenerateOnAction" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #3b82f6; -fx-background-radius: 8; -fx-cursor: hand;" text="Generate View" textFill="WHITE">
                        <font><Font name="System Bold" size="13.0" /></font>
                        <HBox.margin><Insets top="18.0" /></HBox.margin>
                    </Button>
                </children>
            </HBox>

            <HBox spacing="20.0">
                <children>
                    <VBox prefHeight="100.0" prefWidth="250.0" style="-fx-background-color: #ecfdf5; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 5);">
                        <padding><Insets bottom="15.0" left="20.0" right="20.0" top="15.0" /></padding>
                        <children>
                            <Label text="Total Sales" textFill="#047857">
                                <font><Font name="System Bold" size="16.0" /></font>
                            </Label>
                            <Label fx:id="lblTotalSales" text="Rs. 0.00" textFill="#1e293b">
                                <font><Font name="System Bold" size="28.0" /></font>
                            </Label>
                        </children>
                    </VBox>

                    <VBox prefHeight="100.0" prefWidth="250.0" style="-fx-background-color: #eff6ff; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 5);">
                        <padding><Insets bottom="15.0" left="20.0" right="20.0" top="15.0" /></padding>
                        <children>
                            <Label text="Total Orders" textFill="#1d4ed8">
                                <font><Font name="System Bold" size="16.0" /></font>
                            </Label>
                            <Label fx:id="lblTotalOrders" text="0" textFill="#1e293b">
                                <font><Font name="System Bold" size="28.0" /></font>
                            </Label>
                        </children>
                    </VBox>

                    <VBox prefHeight="100.0" prefWidth="250.0" style="-fx-background-color: #fff7ed; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 5);">
                        <padding><Insets bottom="15.0" left="20.0" right="20.0" top="15.0" /></padding>
                        <children>
                            <Label text="Items Sold" textFill="#c2410c">
                                <font><Font name="System Bold" size="16.0" /></font>
                            </Label>
                            <Label fx:id="lblItemsSold" text="0" textFill="#1e293b">
                                <font><Font name="System Bold" size="28.0" /></font>
                            </Label>
                        </children>
                    </VBox>
                </children>
            </HBox>

            <VBox style="-fx-background-color: #f8fafc; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 0);" VBox.vgrow="ALWAYS">
                <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
                <children>
                    <Label text="Recent Orders" textFill="#475569">
                        <font><Font name="System Bold" size="14.0" /></font>
                        <VBox.margin><Insets bottom="10.0" left="10.0" top="5.0" /></VBox.margin>
                    </Label>
                    <TableView fx:id="tblReportDetails" style="-fx-background-radius: 8; -fx-border-radius: 8;" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colOrderId" prefWidth="100.0" text="Order ID" />
                            <TableColumn fx:id="colCustomer" prefWidth="200.0" text="Customer Name" />
                            <TableColumn fx:id="colDate" prefWidth="150.0" text="Date" />
                            <TableColumn fx:id="colTotal" prefWidth="120.0" text="Bill Amount (Rs)" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </children>
            </VBox>

        </VBox>
    </center>
</BorderPane>